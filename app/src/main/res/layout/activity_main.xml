<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sea.myradio2.UI.MainActivity">
      <FrameLayout
        android:id="@+id/frag_container2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      </FrameLayout>
    <!---->
      <LinearLayout
        android:id="@+id/main_bottom_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
          android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/main_btn_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tab1"
            android:onClick="clickPlay"/>

        <Button
            android:id="@+id/main_btn_announce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tab2"
            android:onClick="clickPlay"/>

        <Button
            android:id="@+id/main_btn_play_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tab3"
            android:onClick="clickPlay"/>
      </LinearLayout>

</RelativeLayout>

